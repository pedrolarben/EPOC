<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_exacerbacion"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/linear_layout_exacerbaciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿No te encuentras bien?"
            android:textColor="#212121"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="70dp"
            android:textSize="30dp"/>




        <LinearLayout
            android:id="@+id/contenedor_preguntas_switches"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/contenedor_preguntas"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Tienes fiebre \n mayor de 38º?"
                android:textColor="#727272"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15dp"/>





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="¿Sientes tobillos y/o \n piernas hinchados?"
                android:textColor="#727272"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15dp"/>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="¿Sientes dolor \n en el pecho?"
                android:textColor="#727272"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15dp"/>





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="¿Te encuentras \n irritable?"
                android:textColor="#727272"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="¿Te sientes \n desorientado?"
                android:textColor="#727272"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="¿Te duele \n la cabeza?"
                android:textColor="#727272"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="¿Tienes mas sueño \n de lo habitual?"
                    android:textColor="#727272"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="15dp"/>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/contenedor_switches"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <Switch
                    android:id="@+id/switch_exacerbacion_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textOn="Sí"
                    android:textOff="No"/>

                <Switch
                    android:id="@+id/switch_exacerbacion_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:textOn="Sí"
                    android:textOff="No"/>

                <Switch
                    android:id="@+id/switch_exacerbacion_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:textOn="Sí"
                    android:textOff="No"/>

                <Switch
                    android:id="@+id/switch_exacerbacion_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:textOn="Sí"
                    android:textOff="No"/>

                <Switch
                    android:id="@+id/switch_exacerbacion_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:textOn="Sí"
                    android:textOff="No"/>

                <Switch android:id="@+id/switch_exacerbacion_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="31dp"
                android:textOn="Sí"
                android:textOff="No" />

                <Switch
                    android:id="@+id/switch_exacerbacion_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textOn="Sí"
                    android:textOff="No"/>

            </LinearLayout>

        </LinearLayout>



            <Button
                android:id="@+id/btn_enviar_exacerbacion"
                android:onClick="enviarFormulario"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/texto_mediano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar"
                android:textColor="#212121"/>


    </LinearLayout>


    </android.support.design.widget.CoordinatorLayout>
